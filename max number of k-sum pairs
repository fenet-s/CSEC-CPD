class Solution:
    def maxOperations(self, nums: List[int], k: int) -> int:

        sorted_nums=sorted(nums)
        l=0
        r=len(nums)-1
        count=0
        while l<r:
            if sorted_nums[l] + sorted_nums[r] == k:
                count += 1
                r -= 1
                l += 1
            elif sorted_nums[l] + sorted_nums[r] > k:
                r -= 1
            else:
                l += 1
        return count




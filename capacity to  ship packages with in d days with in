class Solution:
    def shipWithinDays(self, weights: List[int], days: int) -> int:
        
        def dayChecker(weight):
            days_taken=0
            weight_carry= 0
            for i in range(len(weights)):
                weight_carry += weights[i]
                if weight_carry > weight:
                    weight_carry = weights[i]
                    days_taken += 1
            if weight_carry > 0:
                days_taken += 1
            return days_taken <= days

        l,r=max(weights),sum(weights)
        ans=r


        while l <= r:
            mid=(l+r)//2
            if dayChecker(mid):
                ans =min(ans,mid)
                r = mid -1
            else:
                l = mid +1
        return ans




        
